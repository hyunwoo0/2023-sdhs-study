{

    "arrowParens": "avoid",
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 100,
    "endOfLine": "auto",
    "overrides": [
        {
          "files": "*.{scss,css}",
          "options": {
            "tabWidth": 4
          }
        }
    ],
    "[javascript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
    "[typescript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "editor.formatOnSave": true,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}